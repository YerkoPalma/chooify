/* choo-view */

<main>
  <h1>${state.username} &lt;${state.mail}&gt;</h1>
  <p>You are now <span style="color:${this.active ? 'green' : 'red'};">${this.active ? 'active' : 'not active'}</span></p>
  <button onclick=${(e) => send('toggle')}>Toggle state</button>
</main>

/* choo-model */

{
  local: { active: true, name: 'John Doe' },
  effects: {
    toggle: (data, state, send, done) => {
      this.active = !this.active
    }
  }
}
